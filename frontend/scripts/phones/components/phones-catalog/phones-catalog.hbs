<h2>Catalogue</h2>

<ul class="phones">

{{#each phones as |phone| }}
  <li class="thumbnail"
      data-element="phone"
      data-phone-id="{{ phone.id }}">

    <a href="#!/phones/{{ phone.id }}"
       data-element="details-trigger"
       class="thumb">
      <img alt="{{ phone.name }}"
           src="{{ phone.imageUrl }}">
    </a>

    <div class="phones__btn-buy-wrapper">
      <a class="btn btn-success"
         data-element="add-button">
        Add
      </a>
    </div>

    <a href="#!/phones/{{ phone.id }}"
       data-element="details-trigger">
      {{ phone.name }}
    </a>

    <p>{{ phone.snippet }}</p>
  </li>
{{/each}}

</ul>